---
const pathname = new URL(Astro.request.url).pathname
const currentPath = pathname.slice(1)
---

<header class="border-b py-8">
	<nav class="flex justify-between">
		<a
			href="/"
			class="text-2xl font-medium"
			>Developer</a
		>
		<ul class="flex gap-4">
			<li>
				<a
					class={currentPath === "posts" ? "underline decoration-wavy underline-offset-8" : "decoration-wavy underline-offset-8 hover:underline"}
					href="/posts"
					>posts</a
				>
			</li>
			<li>
				<a
					class={currentPath === "work" ? "underline decoration-wavy underline-offset-8" : "decoration-wavy underline-offset-8 hover:underline"}
					href="/work"
					>work</a
				>
			</li>
		</ul>
	</nav>
</header>

---
import CustomLink from "./CustomLink.astro";
const pathname = new URL(Astro.request.url).pathname
const currentPath = pathname.slice(1)

const testPath = Astro.url.pathname
const newTest = testPath.slice(1,testPath.length - 1)
---

<header class="border-b py-8">
	<nav class="flex justify-between">
		<a
			href="/"
			class="text-2xl font-medium"
			>Developer</a
		>
		<ul class="flex gap-3">
			<li>
				<CustomLink currentPath={currentPath} path="posts" href="/posts" link="posts" />
			</li>
			<li>
				<CustomLink currentPath={currentPath} path="work" href="/work" link="work" />
			</li>
		</ul>
	</nav>
</header>

<script define:vars={{testPath, newTest}}>
	console.log(testPath)
	console.log("---------")
	console.log(newTest)
	console.log("---------")
</script>


---
const { post } = Astro.props

function formatDate(date: Date) {
	return new Intl.DateTimeFormat("en-GB", {
		dateStyle: "long",
		timeZone: "Europe/Belgrade",
	}).format(new Date(date))
}
---

<article>
	<div class="flex items-center justify-between">
		<h3
			class="text-lg font-medium leading-7 text-blue-600 decoration-wavy underline-offset-4 md:hover:underline">
			<a
				transition:name={post.frontmatter.slug}
				href={`/post/${post.frontmatter.slug}`}
				>{post.frontmatter.title}</a
			>
		</h3>
		{
			post.frontmatter.pinned ? (
				<>
					<hr class="mx-4 flex-1" />
					<div
						title="Pinned Post"
						class="group relative">
						<span class="pointer-events-none absolute -left-full -top-4 w-max -translate-x-1/2 rounded px-4 opacity-0 transition-all group-hover:-top-6 group-hover:opacity-100 md:left-1/2">
							Pinned Post
						</span>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="20"
							height="20"
							fill="#000000"
							class="dark:fill-white"
							viewBox="0 0 256 256">
							<path d="M255,195.13l-64-144A12,12,0,0,0,180,44H76a12,12,0,0,0-10.85,6.9,2.42,2.42,0,0,0-.12.23L65,51.3a.08.08,0,0,0,0,0L1,195.13A12,12,0,0,0,12,212H244a12,12,0,0,0,11-16.87ZM64,112.55V188H30.46ZM88,188V112.55L121.54,188Zm59.8,0L94.47,68H172.2l53.34,120Z" />
						</svg>{" "}
					</div>
				</>
			) : null
		}
	</div>
	<p class="flex items-center gap-2">
		<svg
			xmlns="http://www.w3.org/2000/svg"
			width="14"
			height="14"
			fill="#6b7280"
			viewBox="0 0 256 256"
			class="dark:fill-gray-400"
			><path
				d="M208,28H188V24a12,12,0,0,0-24,0v4H92V24a12,12,0,0,0-24,0v4H48A20,20,0,0,0,28,48V208a20,20,0,0,0,20,20H208a20,20,0,0,0,20-20V48A20,20,0,0,0,208,28ZM68,52a12,12,0,0,0,24,0h72a12,12,0,0,0,24,0h16V76H52V52ZM52,204V100H204V204Zm60-80v56a12,12,0,0,1-24,0V143.32a12,12,0,0,1-9.37-22l16-8A12,12,0,0,1,112,124Zm61.49,33.88L163.9,168H168a12,12,0,0,1,0,24H136a12,12,0,0,1-8.71-20.25L155.45,142a4,4,0,0,0,.55-2,4,4,0,0,0-7.47-2,12,12,0,0,1-20.78-12A28,28,0,0,1,180,140a27.77,27.77,0,0,1-5.64,16.86A10.63,10.63,0,0,1,173.49,157.88Z"
			></path></svg
		>
		<time
			class="text-sm text-gray-400"
			datetime={post.frontmatter.date}>
			{formatDate(post.frontmatter.date)}
		</time>
	</p>
	<div class="meta-information">
		<p>
			{post.frontmatter.description}
		</p>
	</div>
</article>

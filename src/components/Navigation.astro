---
const navigationList = [
	{ to: "/", name: "home" },
	{ to: "/work", name: "work" },
	{ to: "/blog", name: "blog" },
	{ to: "/contact", name: "contact" },
	{ to: "/ceda", name: "ceda" },
]
---

<header
	id="nav-header"
	class="flex gap-4 mb-20 opacity-0">
	{
		navigationList.map((nl) => (
			<a
				href={nl.to}
				class="after:transition-all after:w-0 after:h-[1px] after:block after:bg-white hover:after:w-full">
				{nl.name}
			</a>
		))
	}
</header>

<script is:inline>
	const header = document.getElementById("nav-header")
	const hasAnimated = sessionStorage.getItem("headerAnimated")
	if (!hasAnimated) {
		header.classList.add("animate-blur-reveal")
		sessionStorage.setItem("headerAnimated", "true")
	} else {
		header.classList.remove("opacity-0")
	}
</script>
